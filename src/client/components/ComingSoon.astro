    animation: fadeIn 0.8s ease-out forwards;
  }

  .delay-100 {
    animation-delay: 0.2s;
  }
  .delay-200 {
    animation-delay: 0.4s;
  }
  .delay-300 {
    animation-delay: 0.6s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
