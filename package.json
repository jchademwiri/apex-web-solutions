{
  "name": "apex-web-solutions",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "astro dev",
    "build": "astro build && wrangler build",
    "build:client": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "lint": "eslint src/**/*.{js,ts,tsx,astro}",
    "worker": "wrangler dev",
    "dev": "concurrently \"pnpm client\" \"pnpm worker\"",
    "dryrun:staging": "pnpm build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "pnpm build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "pnpm build:client && wrangler deploy --env staging",
    "deploy:prod": "pnpm build:client && wrangler deploy --env production",
    "build:worker": "wrangler build",
    "drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "drizzle:push": "drizzle-kit push --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@tabler/icons": "^3.35.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.3",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "jose": "^6.1.3",
    "lucide-astro": "^0.556.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "wrangler": "^4.53.0"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.1",
    "better-sqlite3": "^12.5.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript-eslint": "^8.48.1"
  }
}
